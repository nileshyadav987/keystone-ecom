datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id         String     @id @default(cuid())
  name       String     @default("")
  email      String     @unique @default("")
  mobile     String?    @unique
  password   String
  posts      Post[]     @relation("Post_author")
  categories Category[] @relation("Category_author")
  products   Product[]  @relation("Product_author")
  createdAt  DateTime?  @default(now())
}

model Post {
  id       String  @id @default(cuid())
  title    String  @default("")
  content  Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author   User?   @relation("Post_author", fields: [authorId], references: [id])
  authorId String? @map("author")
  tags     Tag[]   @relation("Post_tags")

  @@index([authorId])
}

model Category {
  id       String    @id @default(cuid())
  title    String    @default("")
  author   User?     @relation("Category_author", fields: [authorId], references: [id])
  authorId String?   @map("author")
  products Product[] @relation("Product_category")

  @@index([authorId])
}

model Image {
  id                  String    @id @default(cuid())
  attachment          Json?
  from_Product_photos Product[] @relation("Product_photos")
}

model Product {
  id         String    @id @default(cuid())
  title      String    @default("")
  price      Decimal   @postgresql.Decimal(18, 4)
  source     String    @default("")
  category   Category? @relation("Product_category", fields: [categoryId], references: [id])
  categoryId String?   @map("category")
  author     User?     @relation("Product_author", fields: [authorId], references: [id])
  authorId   String?   @map("author")
  photos     Image[]   @relation("Product_photos")

  @@index([categoryId])
  @@index([authorId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}
